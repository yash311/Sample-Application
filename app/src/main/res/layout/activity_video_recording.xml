<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLight"
    android:padding="5dp"
    tools:context=".VideoRecording">

    <Button
        android:id="@+id/btn_captureVideo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_layout3"
        android:onClick="captureVideo"
        android:text="Capture Video" />

    <Button
        android:id="@+id/btn_playVideo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_captureVideo"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_layout3"
        android:onClick="playVideo"
        android:text="Play Video" />

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_playVideo"
        android:layout_marginTop="10dp"></VideoView>
</RelativeLayout>